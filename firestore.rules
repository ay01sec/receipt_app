rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ユーザードキュメント
    match /users/{userId} {
      // 自分のユーザー情報は読み書き可能
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // ユーザーの店舗サブコレクション
      match /stores/{storeId} {
        // 自分の店舗情報は読み書き可能
        allow read, write: if request.auth != null && request.auth.uid == userId;

        // 店舗の領収書サブコレクション
        match /receipts/{receiptId} {
          // 自分の領収書は読み書き可能
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }
      }
    }
  }
}
