rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // receipts フォルダ: PDFは誰でも読める（QRコードからのアクセスのため）
    // 書き込みは認証済みユーザーが自分のユーザーIDフォルダ内のみ可能
    match /receipts/{userId}/{allPaths=**} {
      allow read: if true; // 誰でも読める（領収書共有のため）
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // stamps フォルダ: 認証済みユーザーが自分のユーザーIDフォルダ内のファイルにアクセス可能
    match /stamps/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
